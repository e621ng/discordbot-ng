{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": false,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2021.String"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}